<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Send Feedback</title>
    <% include layouts/head %>
    <link href="/css/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="/css/plugins/clockpicker/clockpicker.css" rel="stylesheet" />
  </head>

  <body>
    <nav class="navbar navbar-expand-xl">
      <div class="container h-100">
        <a class="navbar-brand" href="/">
          <h1 class="tm-site-title mb-0"><%= title %></h1>
        </a>
        <button
          class="navbar-toggler ml-auto mr-0"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fas fa-bars tm-nav-icon"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mx-auto h-100">
            <li class="nav-item">
              <a class="nav-link" href="/">
                Dashboard
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/request/reports">
                Reports
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/request/new">
                Create request
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link active" href="/feedback">
                Feedback
              </a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link d-block" href="/logout"> Admin, <b>Logout</b> </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Write Feedback About System</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-12 col-lg-12 col-md-12">
                <form class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label for="description">Feedback</label>
                    <textarea
                      class="form-control validate"
                      rows="12"
                      id="description"
                      name="description"
                    ></textarea>
                  </div>
                  <br />
                  <div class="form-group mb-3" id="errormsg">
                    <div
                      id="msg"
                      class="alert alert-danger"
                      role="alert"
                      style="color:#ffffff;background-color:#435c70;border-color: #ffffff; "
                    ></div>
                  </div>

                  <div class="col-12">
                    <button
                      type="button"
                      class="btn btn-primary btn-block text-uppercase"
                      id="btnAdd"
                    >
                      Send Feedback
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include layouts/footer %> <% include layouts/foot %>

    <script src="/js/app/feedback.js"></script>

    <script>
      const feedback = new Feedback();
      $(document).ready(function() {
        $("#btnAdd").click(function(e) {
          e.preventDefault();
          feedback.sendMail();
        });
        $("#msg").hide();
      });
    </script>
  </body>
</html>
