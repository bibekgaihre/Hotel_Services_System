    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Create Request</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form  class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label
                      for="room_no"
                      >Room Number
                    </label>
                    <select
                    class="custom-select tm-select-accounts"
                    id="room_no" name="room_no"
                  >
                    
                    <option value="101">Room No 101</option>
                    <option value="102">Room No 102</option>
                  </select>

                  </div>
                  <div class="form-group mb-3">
                      <label
                        for="source"
                        >Source
                      </label>
                      <select
                      class="custom-select tm-select-accounts"
                      id="source" name="source"
                    >
                
                      <!-- <option value="alexa">Alexa</option> -->
                      <option value="phone">Phone</option>
                    </select>
                    </div>
                    <div class="form-group mb-3">
                        <label
                          for="request_type"
                          >Request Type
                        </label>
                        <select
                        class="custom-select tm-select-accounts"
                        id="request_type" name="request_type"
                      >
                      <option value="cleaning">Cleaning</option>
                        <option value="food">Food</option>
                        <option value="transport">Transport</option>
                        <option value="baggage">Baggage</option>
                        <option value="toiletries">Toiletries</option>
                        <option value="tablebook">Book a Table</option>
                        <option value="spabook">Book Spa</option>
                      </select>
                      </div>
                  <div class="form-group mb-3">
                    <label
                      for="description"
                      >Description</label
                    >
                    <textarea
                      class="form-control validate"
                      rows="3" id="description" name="description"
                    ></textarea>
                  </div>
                  <div class="form-group mb-3">
                      <label
                        for="assigned_to"
                        >Assigned
                      </label>
                      <select
                      class="custom-select tm-select-accounts"
                      id="assigned_to" name="assigned_to"
                    >
                      <option selected></option>
                      <option value="John Smith">John Smith</option>
                      <option value="James">James</option>
                    </select>
                    </div><br/>
                    <div class="form-group mb-3" id="errormsg"> <div
                      id="msg"
                      class="alert alert-danger"
                      role="alert"
                      style="color:#ffffff;background-color:#435c70;border-color: #ffffff; "
                    ></div></div>
                
                 
                  
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
             
                    <div class="form-group" id="requesteddatedetail">
                        <label
                        for="requested_date"
                        >Requested Date
                      </label>
                        <input
                          class="form-control  m-b datepicker"
                          type="text"
                          name="requested_date"
                          value=""
                          autocomplete="off"
                          id="requested_date" 
                        />
                    
                    </div>
                    <div class="form-group" id="requestedtimedetail">
                       
                        <label
                        for="requested_time"
                        >Requested Time
                      </label>
                          <input
                            class="form-control  m-b input-group clockpicker"
                            type="text"
                            name="requested_time"
                            value=""
                            autocomplete="off"
                            id="requested_time"
                          />
                     
                      </div>
                      <div class="form-group mb-3" id="destinationdetail">
                          <label
                            for="destination"
                            >Destination
                          </label>
                          <input
                            id="destination"
                            name="destination"
                            type="text"
                            class="form-control validate"
                            
                          />
                        </div>
              </div>
              <div class="col-12">
                <button type="button" class="btn btn-primary btn-block text-uppercase" id="btnAdd">Add Request</button>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../layouts/footer %>

    <% include ../layouts/foot %>
    <script src="/js/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="/js/plugins/clockpicker/clockpicker.js"></script>
    <script src="/js/app/request.js"></script>

<script>
  const request=new Request();
    $(document).ready(function(){
      $("#destinationdetail").hide();
      $('select[name="request_type"]').change(function(){
        $("#destinationdetail").hide();
        $("#requestedtimedetail").show();
        $("#requesteddatedetail").show();
        if ($(this).val() === "transport") {
            $("#destinationdetail").show();
          }
          if ($(this).val() === "food" || $(this).val() === "toiletries") {
            $("#requestedtimedetail").hide();
            $("#requesteddatedetail").hide();
          }
      })
      $("#btnAdd").click(function(e) {
          e.preventDefault();
          request.save();
        });
      $(".clockpicker")
          .clockpicker({
            placement: "top",
            align: "left",
            autoclose: true
          })
          .find("input");
          $(".datepicker")
          .datepicker({
            minDate:0,
            autoclose: true,
            format: "mm/dd/yyyy"
          })
          .datepicker("setDate", "now").datepicker({minDate:0})
          .find("input");
          $("#msg").hide();
    });
</script>
  
  </body>
</html>
