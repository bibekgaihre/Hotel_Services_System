<script>
  const request=new Request();
    $(document).ready(function(){
      $("#btnUpdate").hide();
      $("#btnCancel").hide();
      request.enableEdit(false);
      request.getDetail(request_id);

      $("#destinationdetail").hide();
      $('select[name="request_type"]').change(function(){
        $("#destinationdetail").hide();
        $("#requestedtimedetail").show();
        $("#requesteddatedetail").show();
        if ($(this).val() === "transport") {
            $("#destinationdetail").show();
          }
          if ($(this).val() === "food" || $(this).val() === "toiletries") {
            $("#requestedtimedetail").hide();
            $("#requesteddatedetail").hide();
          }
      });
      $("#btnEdit").on("click", e => {
        request.enableEdit(true);
      });
      $("#btnCancel").on("click",e=>{
        request.enableEdit(false);
      })
    $("#msg").hide();
 
    });
</script>
  
