<!DOCTYPE html>
<html lang="en">
  <head>
    <title>DeskInn Login</title>
    <% include layouts/head %>
  </head>
  <body>
    <div class="limiter">
      <div class="container-login100" style="background: #2E536F">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
          <form
            class="login100-form validate-form flex-sb flex-w"
            role="form"
            method="POST"
            onsubmit="login.process_login(this);return false;"
          >
            <span class="login100-form-title p-b-32">
              <%= title%>
            </span>

            <span class="txt1 p-b-11">
              Email
            </span>
            <div class="wrap-input100 validate-input m-b-36" data-validate="Email is required">
              <input class="input100" type="email" name="email" autocomplete="email" />
              <span class="focus-input100"></span>
            </div>

            <span class="txt1 p-b-11">
              Password
            </span>
            <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
              <span class="btn-show-pass">
                <i class="fa fa-eye"></i>
              </span>
              <input
                class="input100"
                type="password"
                name="password"
                autocomplete="current-password"
              />
              <span class="focus-input100"></span>
            </div>

            <div class="flex-sb-m w-full p-b-48">
              <div id="forgetP">
                <a href="#" class="txt3">
                  Forgot Password?
                </a>
              </div>
            </div>

            <div class="container-login100-form-btn">
              <button class="login100-form-btn">
                Login
              </button>
            </div>
          </form>
          <br />
          <div class="row">
            <div
              id="msg"
              class="alert alert-danger"
              role="alert"
              style="color:#90010f;background-color:#ffffff;border-color: #ffffff; "
            ></div>
          </div>
        </div>
      </div>
    </div>

    <div id="dropDownSelect1"></div>
    <% include layouts/foot %>
    <script src="/js/app/login.js"></script>
    <script>
      const login = new Login();
      $(document).ready(function() {
        $("#msg").hide();
        $("#forgetP").click(function() {
          swal({
            title: "Contact Developers",
            text: "Please Contact developers",
            buttons: false,
            timer: 3000
          }).then(() => {
            location.replace("/ ");
          });
        });
      });
    </script>
  </body>
</html>
